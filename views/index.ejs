<%- contentFor('body') %>

<!-- Hero Section -->
<div class="relative w-full">
    <div class="absolute inset-0">
        <img src="https://images.unsplash.com/photo-1600585154340-be6161a56a0c?ixlib=rb-4.0.3" 
             alt="Luxury Property"
             class="w-full h-[500px] object-cover">
        <div class="absolute inset-0 bg-black/40"></div>
    </div>

    <!-- Hero Content -->
    <div class="relative container mx-auto py-24">
        <div class="text-center">
            <h1 class="text-4xl font-bold text-white mb-8">
                The #1 site real estate professionals trust
            </h1>
            
            <!-- Search Bar -->
            <div class="max-w-3xl mx-auto">
                <div class="bg-white rounded-lg shadow-lg p-2">
                    <div class="flex items-center">
                        <div class="flex-1">
                            <input type="text" 
                                   placeholder="Address, School, City, Zip or Neighborhood" 
                                   class="w-full px-4 py-3 text-gray-900 rounded-lg focus:outline-none"
                                   style="border: none;">
                        </div>
                        <button class="bg-indigo-600 text-white px-8 py-3 rounded-lg hover:bg-indigo-700 transition-colors">
                            <i class="fas fa-search mr-2"></i> Search
                        </button>
                    </div>
                </div>
            </div>

            <!-- Quick Links -->
            <div class="flex justify-center space-x-4 mt-8">
                <a href="/properties" class="bg-white/10 text-white px-6 py-2 rounded-full hover:bg-white/20 transition-colors">
                    Buy
                </a>
                <a href="/properties?type=rent" class="bg-white/10 text-white px-6 py-2 rounded-full hover:bg-white/20 transition-colors">
                    Rent
                </a>
                <a href="/properties/pre-approval" class="bg-white/10 text-white px-6 py-2 rounded-full hover:bg-white/20 transition-colors">
                    Pre-approval
                </a>
                <a href="/properties?type=sold" class="bg-white/10 text-white px-6 py-2 rounded-full hover:bg-white/20 transition-colors">
                    Just sold
                </a>
                <a href="/properties?type=value" class="bg-white/10 text-white px-6 py-2 rounded-full hover:bg-white/20 transition-colors">
                    Home value
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Property Categories -->
<section class="w-full bg-white py-12">
    <div class="container mx-auto">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
            <!-- New Listings -->
            <a href="/properties?category=new" class="group">
                <div class="relative rounded-lg overflow-hidden">
                    <img src="https://images.unsplash.com/photo-1600607687939-ce8a6c25118c?ixlib=rb-4.0.3" 
                         alt="New Listings"
                         class="w-full h-48 object-cover group-hover:scale-105 transition-transform duration-300">
                    <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent"></div>
                    <div class="absolute bottom-4 left-4">
                        <h3 class="text-xl font-semibold text-white">New Listings</h3>
                        <p class="text-white/80 text-sm"><%= stats.totalProperties %> Properties</p>
                    </div>
                </div>
            </a>

            <!-- Price Reduced -->
            <a href="/properties?category=reduced" class="group">
                <div class="relative rounded-lg overflow-hidden">
                    <img src="https://images.unsplash.com/photo-1600566753190-17f0baa2a6c3?ixlib=rb-4.0.3" 
                         alt="Price Reduced"
                         class="w-full h-48 object-cover group-hover:scale-105 transition-transform duration-300">
                    <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent"></div>
                    <div class="absolute bottom-4 left-4">
                        <h3 class="text-xl font-semibold text-white">Price Reduced</h3>
                        <p class="text-white/80 text-sm">Great Deals</p>
                    </div>
                </div>
            </a>

            <!-- Open Houses -->
            <a href="/properties?category=open" class="group">
                <div class="relative rounded-lg overflow-hidden">
                    <img src="https://images.unsplash.com/photo-1600573472550-8090b5e0745e?ixlib=rb-4.0.3" 
                         alt="Open Houses"
                         class="w-full h-48 object-cover group-hover:scale-105 transition-transform duration-300">
                    <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent"></div>
                    <div class="absolute bottom-4 left-4">
                        <h3 class="text-xl font-semibold text-white">Open Houses</h3>
                        <p class="text-white/80 text-sm">Visit Today</p>
                    </div>
                </div>
            </a>

            <!-- Recently Sold -->
            <a href="/properties?category=sold" class="group">
                <div class="relative rounded-lg overflow-hidden">
                    <img src="https://images.unsplash.com/photo-1600047509807-ba8f99d2cdde?ixlib=rb-4.0.3" 
                         alt="Recently Sold"
                         class="w-full h-48 object-cover group-hover:scale-105 transition-transform duration-300">
                    <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent"></div>
                    <div class="absolute bottom-4 left-4">
                        <h3 class="text-xl font-semibold text-white">Recently Sold</h3>
                        <p class="text-white/80 text-sm">Market Insights</p>
                    </div>
                </div>
            </a>
        </div>
    </div>
</section>

<!-- Featured Properties -->
<section class="w-full bg-gray-50 py-12">
    <div class="container mx-auto">
        <h2 class="text-2xl font-bold text-gray-900 mb-8">Featured Properties</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <% properties.forEach(property => { %>
                <div class="bg-white rounded-lg overflow-hidden shadow-sm hover:shadow-md transition-shadow">
                    <div class="relative">
                        <img src="<%= property.images[0] %>" 
                             alt="<%= property.title %>"
                             class="w-full h-48 object-cover">
                        <div class="absolute top-4 right-4 bg-white text-indigo-600 px-2 py-1 rounded text-sm font-semibold">
                            $<%= property.price.toLocaleString() %>/mo
                        </div>
                    </div>
                    <div class="p-4">
                        <h3 class="font-semibold text-gray-900"><%= property.title %></h3>
                        <p class="text-sm text-gray-600 mt-1">
                            <i class="fas fa-map-marker-alt mr-1"></i>
                            <%= property.location.city %>
                        </p>
                        <div class="mt-4 flex items-center justify-between">
                            <div class="flex space-x-4 text-sm text-gray-600">
                                <span><i class="fas fa-bed mr-1"></i> <%= property.features.beds %> beds</span>
                                <span><i class="fas fa-bath mr-1"></i> <%= property.features.baths %> baths</span>
                                <span><i class="fas fa-ruler-combined mr-1"></i> <%= property.features.sqft %> sqft</span>
                            </div>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
</section> 